# Auto detect text files and perform LF normalization
* text=auto

# Go files
*.go text eol=lf
*.mod text eol=lf
*.sum text eol=lf

# Scripts
*.sh text eol=lf
*.py text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf

# Documentation
*.md text eol=lf
LICENSE text eol=lf

# Docker
Dockerfile text eol=lf
.dockerignore text eol=lf

# Git
.gitignore text eol=lf
.gitattributes text eol=lf

